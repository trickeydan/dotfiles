general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "battery all"
#order += "load"
order += "tztime local"

cpu_usage {
	format = "ðŸ’¡ %usage"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "ðŸ“¡: (%quality at %essid) %ip"
        format_down = "ðŸ“¡: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
	hide_seconds = true
	last_full_capacity = true
	integer_battery_capacity = true
	threshold_type = "time"
	low_threshold = 30
	status_chr = "âš¡"
	status_bat = "ðŸ”‹"
	status_unk = "?"
	status_full= "â˜»"	
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
